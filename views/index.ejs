<!DOCTYPE html>
<html lang="en">

<%- include("./partials/header.ejs") %>

<style>
  body {
    font-family: "Gabarito", sans-serif;
    margin: 0;
    padding: 0;
  }

  #main {
    position: relative;
    overflow: hidden;
  }

  #video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .container-fluid {
    padding: 20px;
    margin-top: 20px;
    border-radius: 6px;
    background-color: rgba(221, 222, 223, 0.8); /* Add transparency to the background color */
  }

  .title {
    text-decoration: none;
    color: black;
  }

  .title:hover {
    color: rgb(43, 186, 230);
  }

  hr {
    border: 1px solid black;
    color: black;
  }

  /* New styles for the 3-column layout */
  .row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .col-lg-4 {
    flex-basis: calc(33.33% - 20px);
    margin-bottom: 20px;
  }

  .col-lg-4 .container-fluid {
    height: 100%;
  }

  @media (max-width: 768px) {
    .col-lg-4 {
      flex-basis: 100%;
    }
  }
</style>

<body>
  <%- include("./partials/nav.ejs") %>

  <main id="main">
    

    <section class="section bg-white p-5">
      <div class="container ">
        <div class="row my-4">
          <div class="col-sm-12">
            <h1 class="posts-entry-title">DAILY BLOGS</h2>
          </div>
        </div>

        <div class="row">
          <% results.forEach(res => { %>
          <div class="col-lg-4 mb-4">
            <div class="container-fluid ">
              <div class="row">
                <div class="col-12">
                  <h2>
                    <a href="/viewBlog/<%= res.id %>" class="title" name="<%= res.id %>" value="<%= res.id %>"><%= res.title %></a>
                  </h2>
                  <p style="color: gray">
                    <i class="fa-regular fa-calendar-days"></i> <%= res.date_created.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                  </p>
                  <p><%= res.subtitle %></p>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
  </main>
</body>

</html>
